<div class="row">
  <div class="col m12">
   <div class="course_heading">
        <h1>Course listing</h1>
   </div>
  </div>
 </div>
<div class="row">
    <% @courses.each do |course| %>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= course.short_name %>: <%= truncate(course.name, length: 50) %></span>
          <p><%= truncate(course.description, length: 150) %> </p>
        </div>
        <div class="card-action">
          <% if logged_in? && !(current_user.courses.include?(course)) %>
          <%= link_to "Enroll", course_enroll_path(course_id: course.id), method: :post %>
          <% end %>
          <%= link_to 'Info', course_path(course) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
               