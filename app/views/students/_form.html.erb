<%= render 'shared/errors', obj: @student %>
<div class="container">
    <div class="row sign-up-form">
        <div class="col m12">
            <div class="card-panel">
              <div class="card-title">
               <h3 class="teal-text center"><%= @student.new_record? ? 'Sign Up!' : 'Edit your profile!' %></h3>  
              </div>
               <div class="row">
                <%= form_for(@student, html: { class: 'col m12' }) do | f | %>
                 <div class="row">
                     <div class="input-field col m12">
                        <%= f.text_field :name, placeholder: 'Enter your full name', autofocus: true %>
                        <%= f.label :name, class: "active" %>
                     </div>
                 </div>
                    <div class="row">
                     <div class="input-field col m12">
                        <%= f.email_field :email, placeholder: 'Enter your email address', autofocus: true %>
                        <%= f.label :email, class: "active" %>
                     </div>
                 </div>
                 <div class="row">
                     <div class="input-field col m12">
                        <%= f.password_field :password, placeholder: 'Choose password', autofocus: true %>
                        <%= f.label :password, class: "active" %>
                     </div>
                 </div>
                  <div class="row">
                     <div class="input-field col m12">
                        <%= f.password_field :confirm_password, placeholder: 'Confirm password', autofocus: true %>
                        <%= f.label :confirm_password, class: "active" %>
                     </div>
                 </div>
                  <div class="row">
                    <div class="input-field col m12">               
                     <%= f.button(@student.new_record? ? '<i class="material-icons right">send</i>submit'.html_safe : 
                                     '<i class="material-icons right">send</i>submit changes'.html_safe, 
                                     class: "btn waves-effect waves-light right white-text") %>
                   </div>  
                 </div>
                <% end %>
            </div>  
          </div>
        </div>
    </div>
</div>
